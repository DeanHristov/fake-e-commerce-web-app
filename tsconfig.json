{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@types/*": [
        "./src/types/*.ts"
      ],
      "@mocks/*": [
        "./src/mocks/*.ts",
        "./src/mocks/**/*.ts"
      ],
      "@components/*": [
        "./src/components/**/*.tsx"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@ctx/*": [
        "./src/ctx/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
